<h1>Burgers</h1>
<h4>These burgers are yet to be eaten</h4>
<div class="row">
        {{#each burgers}}
          {{#unless this.devoured}}
        <div >
          <h4>{{this.id}}. {{this.burger_name}}
          </h4>
        </div>
        <div>
          <form class="eatBurger">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Devour it!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
      <div>
        {{#each burgers}}
          {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
    </div>
  </div>
</div>
<div >
  <div >
    <div >
      <form action="/api/burgers" method="POST">
        <input type="text" class="form-control" name="burgerName" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
      </form>
      <p>Enter a burger you want to eat Click the "Submit" button.</p>
    </div>
  </div>
</div>